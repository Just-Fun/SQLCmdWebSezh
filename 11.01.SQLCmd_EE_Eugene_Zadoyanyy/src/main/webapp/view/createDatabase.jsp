<div id="create-database-form">
    <h1>Create database</h1>
    <p>Enter database name:</p>
    <table>
        <tr>
            <td>
                <label>Database name:</label>
            </td>
            <td>
                <input type="text" name="database" id="database-name" placeholder="Database name">
            </td>
        </tr>
    </table>
    <table>
        <tr>
            <td>
                <button id="create-database-button">Create</button>
            </td>
            <td>
                <button id="create-database-back">Back to menu</button>
            </td>
        </tr>
    </table>
    <table>
        <tr>
            <td>
                <td><span id="create-database-message"></span></td>
            </td>
        </tr>
    </table>
</div>

